    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/index.js",
            "cwd": "${workspaceRoot}",
            "outFiles": [],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run mocha",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceRoot}",
            "stopOnEntry": false,
            "runtimeExecutable": null,
            "env": { "NODE_ENV": "production"},
            "args": ["tests/**/*-test.js"],
            "sourceMaps": true
        }
    ]
}